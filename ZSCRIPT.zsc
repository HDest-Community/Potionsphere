class BluesphereReplacer : RandomSpawner replaces BlueSphere
{
	Default
	{
		DropItem "PotionBundle", 255, 1;
	}
}

class MegasphereReplacer : RandomSpawner replaces BrownSphere
{
	Default
	{
		DropItem "SpiritPotionBundle", 255, 1;
	}
}

class PotionBundle : Actor
{
	protected void SpawnPotions()
	{
		for (int i = 0; i < 3; ++i)
		{
			A_SpawnItemEx(GetReplacement("BluePotion"), 0, 0, 0, frandom(0.25, 1.0), 0, frandom(1.0, 3.0), random(0, 359), SXF_NOCHECKPOSITION);
		}
	}

	States
	{
		Spawn:
			TNT1 A 0 NoDelay SpawnPotions();
			Stop;
	}
}

class SpiritPotionBundle : PotionBundle
{
	States
	{
		Spawn:
			TNT1 A 0 NoDelay
			{
				SpawnPotions();
				A_SpawnItemEx(GetReplacement("SpiritualArmour"), 0, 0, 0, frandom(0.25, 1.0), 0, frandom(1.0, 3.0), random(0, 359), SXF_NOCHECKPOSITION);
			}
			Stop;
	}
}